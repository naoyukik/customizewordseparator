<idea-plugin>
  <id>net.dstribe.custom_word_separator</id>
  <name>Custom word separator</name>
  <vendor email="mmaga+github@dstribe.net">DsTribe</vendor>

  <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <group id="MyPlugin.SampleMenu" text="MultiByteWordSeparator"
      description="Multi byte word separates">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action class="moveLeftAction" id="net.dstribe.multibytewordseparate.previous"
        text="Move Caret to Previous Word" description="Multi byte word move left"/>
      <action class="moveRightAction" id="net.dstribe.multibytewordseparate.next"
        text="Move Caret to Next Word" description="Multi byte word move Right"/>
    </group>
  </actions>
</idea-plugin>